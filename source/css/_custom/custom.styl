.__prob__
	display block
	padding 20px
	border 1px solid #ccc
	.__prob_head__
		font-size 2em
	ol
		font-size 1em
		.__prob_item__
			padding 5px
			.__prob_option__
				font-size 1em
				display block
				width 100%
				cursor pointer
				transition background-color .3s
				input
					display none
				div
					padding-left 10px
					transition background-color .3s
				&:hover
					background-color #00000017
					transition background-color .3s
				input:checked+div
					background-color #00000038
					transition background-color .3s
	.__prob_submit__
		border none
		background-color #00a70b
		color white
		font-size 1.5em
		padding 5px 50px
	.__prob_result__
		display inline-block
		font-size 1.7em
		padding-left 20px
